<h1>Projects</h1>

<ul>
  <% @projects.each do |project|%>

      <%if project.description !=nil%>
        <li><a href="/projects/<%=project.id%>"><%=project.name%>-<%=project.description%></a></li>
      <%else%>
        <li><a href="/projects/<%=project.id%>"><%=project.name%></a></li>
      <%end%>

  <%end%>
</ul>

<a href="/projects/new"><h3>Add a new project</h3></a>